{
  "name": "ZilPay",
  "author": "https://zilpay.xyz/",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "39": "icons/icon39.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "storage": {
    "managed_schema": "schema.json"
  },
  "permissions": [
    "storage",
    "notifications",
    "https://api.coingecko.com/api/v3/simple/price",
    "https://api.zilliqa.com/",
    "https://dev-api.zilliqa.com/",
    "wss://api-ws.zilliqa.com",
    "wss://dev-ws.zilliqa.com",
    "ws://127.0.0.1:4200",
    "https://zilpay.xyz/*",
    "http://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "inpage.js"
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "ZilPay",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}